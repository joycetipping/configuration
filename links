#!/bin/bash

export home="$HOME"
export conf="$home/projects/configuration"

ln -sf $conf/emacs                 $HOME/.emacs
ln -sf $conf/vim/vimrc             $HOME/.vimrc
ln -sf $conf/vim/vim               $HOME/.vim

ln -sf $conf/bash/bashrc           $HOME/.bashrc
ln -sf $conf/bash/bash_profile     $HOME/.bash_profile

ln -sf $conf/bcrc                  $HOME/.bcrc
ln -sf $conf/git/gitconfig         $HOME/.gitconfig
ln -sf $conf/ssh-config            $HOME/.ssh/config

rm $HOME/.vim/vim

if [[ "$@" == 'all'  ]]; then
  ln -sf $conf/bash/xinitrc        $HOME/.xinitrc
  ln -sf $conf/conkyrc             $HOME/.conkyrc
  ln -sf $conf/openbox             $HOME/.config/openbox
  ln -sf $conf/Xmodmap             $HOME/.Xmodmap

  rm $HOME/.config/openbox/openbox
fi

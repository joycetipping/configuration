<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc">

  <resistance>
    <strength>80</strength>
    <screen_edge_strength>80</screen_edge_strength>
  </resistance>

  <focus>
    <focusNew>yes</focusNew>
    <followMouse>yes</followMouse>
    <focusLast>yes</focusLast>
    <!--<underMouse>yes</underMouse>-->
    <focusDelay>0</focusDelay>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>

  <placement>
    <policy>Smart</policy>
  </placement>

  <theme>
    <keepBorder>no</keepBorder>
    <font place='OnScreenDisplay'><name>sans</name><size>24</size></font>
    <font place='MenuItem'>       <name>sans</name><size>24</size></font>
    <font place='MenuHeader'>     <name>sans</name><size>24</size></font>
  </theme>

  <desktops>
    <number>10</number>
    <firstdesk>1</firstdesk>
    <popupTime>200</popupTime>
  </desktops>

  <margins>
    <top>0</top>
    <bottom>0</bottom>
    <left>0</left>
    <right>0</right>
  </margins>

  <resize>
    <drawContents>no</drawContents>
    <popupShow>Nonpixel</popupShow>
    <popupPosition>Center</popupPosition>
  </resize>

  <mouse>
    <dragThreshold>2</dragThreshold>
    <doubleClickTime>200</doubleClickTime>
    <screenEdgeWarpTime>0</screenEdgeWarpTime><!-- disable desktop flipping when dragging windows -->

    <context name="Frame">
      <mousebind button="A-Left"   action="Press"><action name="Focus"/> <action name="Raise"/></mousebind>
      <mousebind button="A-Left"   action="Drag"> <action name="Move"/>                        </mousebind>
      <mousebind button="A-S-Left" action="Drag"> <action name="Resize"/>                      </mousebind>
    </context>
  </mouse>

  <menu>
    <file>menu.xml</file>
    <hideDelay>200</hideDelay>
    <middle>no</middle>
    <submenuShowDelay>100</submenuShowDelay>
    <applicationIcons>no</applicationIcons>
  </menu>

  <applications>
    <application name='*'><decor>no</decor><shade>no</shade></application>
    <application name='audacious'><desktop>all</desktop> <layer>normal</layer></application>
    <application name='Conky'><layer>below</layer></application>
  </applications>

  <keyboard>
    <chainQuitKey>C-g</chainQuitKey>

    <!-- Misc -->
    <keybind key="A-F4"><action name="Close"/></keybind>

    <!-- Menus -->
    <keybind key="W-space"><action name="ShowMenu"><menu>root-menu</menu></action></keybind>
    <keybind key="A-space"><action name="ShowMenu"><menu>client-menu</menu></action></keybind>

    <!-- Brightness -->
    <keybind key='XF86MonBrightnessUp'>    <action name='Execute'><command>backlight +50</command></action></keybind>
    <keybind key='XF86MonBrightnessDown'>  <action name='Execute'><command>backlight -50</command></action></keybind>
    <keybind key='S-XF86MonBrightnessUp'>  <action name='Execute'><command>backlight max</command></action></keybind>
    <keybind key='S-XF86MonBrightnessDown'><action name='Execute'><command>backlight 50</command></action></keybind>

    <!-- Audio -->
    <keybind key='XF86AudioLowerVolume'>  <action name='Execute'><command>vol-delta-pa -8192</command></action></keybind>
    <keybind key='XF86AudioRaiseVolume'>  <action name='Execute'><command>vol-delta-pa 8192</command></action></keybind>
    <keybind key='S-XF86AudioLowerVolume'><action name='Execute'><command>vol-delta-pa -2048</command></action></keybind>
    <keybind key='S-XF86AudioRaiseVolume'><action name='Execute'><command>vol-delta-pa 2048</command></action></keybind>
    <keybind key='XF86AudioMute'>         <action name='Execute'><command>vol-absolute-pa 0</command></action></keybind>

    <!-- Audacious stuff
    <keybind key='W-a'><action name='Execute'>   <command>audacious</command></action></keybind>
    <keybind key='W-S-8'> <action name='Execute'><command>transset 0.85</command></action></keybind>
    <keybind key='W-S-a'>
      <action name='Execute'><command>transset -n Audacious 0.1</command></action>
      <action name='Execute'><command>wmctrl -a audacious</command></action>
    </keybind>
    <keybind key='XF86AudioPlay'><action name='Execute'><command>sh -c 'pkill -INT -x bi; audacious -u; md ~/r/env/bgi'</command></action></keybind>
    <keybind key='XF86AudioPause'><action name='Execute'><command>sh -c 'pkill -INT -x bi; audacious -u; md ~/r/env/bgi'</command></action></keybind>
    -->

    <!-- Reconnection for silly headset that keeps getting out of sync -->
    <keybind key='W-A-S-h'><action name='Execute'><command>sh -c "echo 'disconnect 00:00:AB:CE:8E:C6' | bluetoothctl"</command></action></keybind>
    <keybind key='W-A-h'>  <action name='Execute'><command>sh -c "echo 'connect 00:00:AB:CE:8E:C6' | bluetoothctl"</command></action></keybind>

    <!-- App integrations -->
    <keybind key="A-F2"> <action name="Execute"><command>urxvt -geometry 80x3 -name bashrun -e sh -c "/bin/bash -i -t"</command></action></keybind><!-- "run" dialog -->
    <keybind key='Print'><action name='Execute'><command>scrot ~/Pictures/Screenshots/screenshot-%Y.%m.%d.%H%M%S.png</command></action></keybind>
    <keybind key='W-q'>  <action name='Execute'><command>xtrlock</command></action></keybind>
    <keybind key="W-w">  <action name="Execute"><command>google-chrome</command></action></keybind>
    <keybind key="W-e">  <action name="Execute"><command>dolphin</command></action></keybind>
    <keybind key="W-r">  <action name="Execute"><command>urxvt -g 144x30 -e ranger</command></action></keybind>
    <keybind key="W-t">  <action name="Execute"><command>urxvt</command></action></keybind>
    <keybind key="W-S-t"><action name="Execute"><command>terminator</command></action></keybind>
    <keybind key='W-s'>  <action name='Execute'><command>pavucontrol</command></action></keybind>

    <!-- Backgrounds -->
    <keybind key='W-S-o'><action name='Execute'><command>xset dpms force off</command></action></keybind>

    <!-- Keybindings for desktop switching -->
    <keybind key="W-h"><action name="DesktopLeft"/></keybind>
    <keybind key="W-l"><action name="DesktopRight"/></keybind>
    <keybind key="W-k"><action name="DesktopUp"/></keybind>
    <keybind key="W-j"><action name="DesktopDown"/></keybind>

    <keybind key="S-W-h"><action name="SendToDesktopLeft"/></keybind>
    <keybind key="S-W-l"><action name="SendToDesktopRight"/></keybind>
    <keybind key="S-W-k"><action name="SendToDesktopUp"/></keybind>
    <keybind key="S-W-j"><action name="SendToDesktopDown"/></keybind>

    <keybind key="W-Prior">  <action name="DesktopLeft"/></keybind><!-- PageUp -->
    <keybind key="W-Next">   <action name="DesktopRight"/></keybind><!-- PageDown -->
    <keybind key="S-W-Prior"><action name="SendToDesktopLeft"/></keybind>
    <keybind key="S-W-Next"> <action name="SendToDesktopRight"/></keybind>

    <!-- Keybindings for window switching -->
    <keybind key="A-Tab">  <action name="NextWindow"/></keybind>
    <keybind key="A-S-Tab"><action name="PreviousWindow"/></keybind>
    <keybind key="W-Tab">  <action name="NextWindow"><allDesktops>yes</allDesktops></action></keybind>
    <keybind key="W-S-Tab"><action name="PreviousWindow"><allDesktops>yes</allDesktops></action></keybind>

    <!-- Windows -->
    <keybind key='W-Up'>  <action name='Maximize'></action></keybind>
    <keybind key='W-Down'><action name='Unmaximize'></action></keybind>
    <keybind key='W-f'>   <action name='ToggleMaximize'><direction>horizontal</direction></action></keybind>
    <keybind key='W-v'>   <action name='ToggleMaximize'><direction>vertical</direction></action></keybind>
    <keybind key="W-d">   <action name="ToggleShowDesktop"/></keybind>

    <!-- Window tiling -->
      <!-- Tint2 menu bar is 50 tall, hence all the heights are -50 -->

      <!-- side-by-side halves -->
      <keybind key='W-Left'> <action name="Unmaximize"/><action name='MoveResizeTo'><x>0</x><y>0</y><width>1920</width><height>2350</height></action></keybind>
      <keybind key='W-Right'><action name="Unmaximize"/><action name='MoveResizeTo'><x>1920</x><y>0</y><width>1920</width><height>2350</height></action></keybind>

      <!-- stacked halves -->
      <keybind key='W-S-Left'> <action name="Unmaximize"/><action name='MoveResizeTo'><x>0</x><y>0</y><width>3840</width><height>1150</height></action></keybind>
      <keybind key='W-S-Right'><action name="Unmaximize"/><action name='MoveResizeTo'><x>0</x><y>1200</y><width>3840</width><height>1150</height></action></keybind>

      <!-- side-by-side thirds -->
      <keybind key='W-1'>  <action name="Unmaximize"/><action name='MoveResizeTo'><x>0</x><y>0</y><width>1280</width><height>2350</height></action></keybind>
      <keybind key='W-S-1'><action name="Unmaximize"/><action name='MoveResizeTo'><x>0</x><y>0</y><width>2560</width><height>2350</height></action></keybind>
      <keybind key='W-2'>  <action name="Unmaximize"/><action name='MoveResizeTo'><x>1280</x><y>0</y><width>1280</width><height>2350</height></action></keybind>
      <keybind key='W-S-2'><action name="Unmaximize"/><action name='MoveResizeTo'><x>1280</x><y>0</y><width>2560</width><height>2350</height></action></keybind>
      <keybind key='W-3'>  <action name="Unmaximize"/><action name='MoveResizeTo'><x>2560</x><y>0</y><width>1280</width><height>2350</height></action></keybind>

      <!-- quarters -->
      <keybind key='W-4'><action name="Unmaximize"/><action name='MoveResizeTo'><x>0</x><y>0</y><width>1920</width><height>1150</height></action></keybind>
      <keybind key='W-5'><action name="Unmaximize"/><action name='MoveResizeTo'><x>1920</x><y>0</y><width>1920</width><height>1150</height></action></keybind>
      <keybind key='W-6'><action name="Unmaximize"/><action name='MoveResizeTo'><x>0</x><y>1200</y><width>1920</width><height>1150</height></action></keybind>
      <keybind key='W-7'><action name="Unmaximize"/><action name='MoveResizeTo'><x>1920</x><y>1200</y><width>1920</width><height>1150</height></action></keybind>

      <!-- middle of the screen -->
      <keybind key='W-g'><action name="Unmaximize"/><action name='MoveResizeTo'><x>960</x><y>600</y><width>1920</width><height>1150</height></action></keybind>

